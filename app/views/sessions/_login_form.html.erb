<%= turbo_frame_tag "login_form" do %>
  <%= form_with url: login_path, method: :post do |form| %>
    <% if defined?(error) && error.present? %>
      <div class="alert alert-danger"><%= error %></div>
    <% elsif flash[:alert].present? %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
    <div class="mb-3">
      <%= form.label :login, "Email or Username" %>
      <%= form.text_field :login, class: "form-control", placeholder: "Enter your email or username" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>
    <div class="actions">
      <%= form.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>