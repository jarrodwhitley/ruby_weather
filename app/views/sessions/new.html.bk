<h1>Login</h1>
<div class="container ">
  <%= form_with url: login_path, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :login, "Email or Username" %>
      <%= form.text_field :login, class: "form-control", placeholder: "Enter your email or username" %>
    </div>
    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <%= form.submit "Login", class: "btn btn-primary" %>
  <% end %>
</div>